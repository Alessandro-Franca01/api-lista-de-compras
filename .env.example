APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=root
DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=file
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=null
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ===========================================
# CONFIGURAÇÕES WHATSAPP BUSINESS API
# ===========================================

# Habilitar/Desabilitar funcionalidades WhatsApp
WHATSAPP_ENABLED=false

# Credenciais da API do WhatsApp Cloud
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_ID=your_phone_number_id_here
WHATSAPP_BUSINESS_ACCOUNT_ID=your_business_account_id_here
WHATSAPP_APP_SECRET=your_app_secret_here

# Token para verificação do webhook
WHATSAPP_VERIFY_TOKEN=your_custom_verify_token_here

# Configurações da API
WHATSAPP_API_VERSION=v18.0
WHATSAPP_GRAPH_API_URL=https://graph.facebook.com

# Configurações de Webhook
WHATSAPP_WEBHOOK_ENABLED=true
WHATSAPP_VERIFY_SIGNATURE=true

# Configurações de Rate Limiting
WHATSAPP_MAX_MESSAGES_PER_HOUR=10
WHATSAPP_MAX_MESSAGES_PER_DAY=100
WHATSAPP_MAX_INCOMING_PER_HOUR=20

# Configurações de Timeout e Retry
WHATSAPP_TIMEOUT=30
WHATSAPP_RETRY_ATTEMPTS=3

# Configurações de Mídia
WHATSAPP_MAX_MEDIA_SIZE=16777216
WHATSAPP_CACHE_MEDIA_URLS=true
WHATSAPP_MEDIA_CACHE_DURATION=3600

# Configurações de Logging
WHATSAPP_LOG_INCOMING=true
WHATSAPP_LOG_OUTGOING=true
WHATSAPP_MASK_PHONE_LOGS=true
WHATSAPP_TRACK_STATISTICS=true

# ===========================================
# CONFIGURAÇÕES DE IA
# ===========================================

# Modelo padrão de IA (deepseek ou ollama)
DEFAULT_AI_MODEL=deepseek

# Configurações Deepseek
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_MAX_TOKENS=100

# Configurações Ollama
OLLAMA_DEFAULT_MODEL=phi4-mini
OLLAMA_API_URL=http://localhost:11434/api

# Chave da API (para Deepseek usa a mesma do OpenAI)
OPENAI_API_KEY=your_openai_or_deepseek_api_key_here

# ===========================================
# CONFIGURAÇÕES DE FILA (QUEUE)
# ===========================================

# Driver da fila (recomendado: redis para produção)
QUEUE_CONNECTION=redis

# Configurações do Redis (se usando redis)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ===========================================
# CONFIGURAÇÕES DE CACHE
# ===========================================

# Driver de cache (recomendado: redis para produção)
CACHE_DRIVER=redis

# ===========================================
# CONFIGURAÇÕES DE LOG
# ===========================================

# Canal de log padrão
LOG_CHANNEL=stack

# Configurar canais específicos no config/logging.php:
# - whatsapp_failures
# - whatsapp_stats

# ===========================================
# CONFIGURAÇÕES DE SEGURANÇA
# ===========================================

# URLs permitidas para webhook (separar por vírgula)
WHATSAPP_ALLOWED_WEBHOOK_IPS=127.0.0.1,::1

# Habilitar verificação de IP do webhook
WHATSAPP_VERIFY_WEBHOOK_IP=false

# ===========================================
# CONFIGURAÇÕES DE MONITORAMENTO
# ===========================================

# Habilitar coleta de métricas
WHATSAPP_COLLECT_METRICS=true

# URL para enviar métricas (opcional)
METRICS_WEBHOOK_URL=

# ===========================================
# CONFIGURAÇÕES DE BACKUP
# ===========================================

# Backup de mensagens enviadas
WHATSAPP_BACKUP_MESSAGES=true

# Tempo de retenção de backup (em dias)
WHATSAPP_BACKUP_RETENTION_DAYS=30

# ===========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ===========================================

# Modo debug para WhatsApp (logs mais verbosos)
WHATSAPP_DEBUG_MODE=false

# Simular envio de mensagens (não envia realmente)
WHATSAPP_MOCK_SEND=false

# URL de webhook de teste (para desenvolvimento local)
WHATSAPP_TEST_WEBHOOK_URL=https://yourdomain.ngrok.io/whatsapp/webhook
